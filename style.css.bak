/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
}

.login-container {
    width: 100%;
    max-width: 400px;
    padding: 20px;
}

.login-card {
    background: white;
    padding: 40px;
    border-radius: 20px;
    width: 100%;
}

.login-card h1 {
    color: #333;
    font-size: 24px;
    margin-bottom: 30px;
    text-align: center;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    color: #666;
    margin-bottom: 8px;
    font-size: 14px;
    opacity: 0.7;
}

.input-group {
    position: relative;
}

.input-group i {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #666;
    font-size: 16px;
    opacity: 0.7;
}

.input-group input {
    width: 100%;
    padding: 15px 15px 15px 45px;
    background: #2B2D3E;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    color: white;
}

.input-group input::placeholder {
    color: #666;
    opacity: 0.7;
}

.input-group input:focus {
    outline: none;
}

.forgot-link {
    display: block;
    text-align: right;
    color: #666;
    font-size: 13px;
    text-decoration: none;
    margin-top: 8px;
}

.login-btn {
    width: 100%;
    padding: 15px;
    background: #3366FF;
    border: none;
    border-radius: 8px;
    color: white;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    margin: 25px 0;
}

.login-btn:hover {
    opacity: 0.9;
}

.social-divider {
    text-align: center;
    margin: 20px 0;
    position: relative;
}

.social-divider:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #eee;
}

.social-divider span {
    background: white;
    padding: 0 15px;
    color: #666;
    font-size: 13px;
    position: relative;
    opacity: 0.7;
}

.social-login {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin: 20px 0;
}

.social-btn {
    width: 80px;
    height: 35px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: white;
    font-size: 14px;
}

.social-btn.facebook {
    background: #3B5998;
}

.social-btn.twitter {
    background: #1DA1F2;
}

.social-btn.google {
    background: #DB4437;
}

.signup-link {
    text-align: center;
    margin-top: 20px;
}

.signup-link span {
    display: block;
    color: #666;
    font-size: 13px;
    margin-bottom: 8px;
    opacity: 0.7;
}

.signup-link a {
    color: #3366FF;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
}

/* What We Offer Section */
.offers-section {
    padding: 80px 0;
    background: #f8f9fa;
}

.section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 50px;
    color: #2d3436;
}

.offers-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.offer-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.offer-card:hover {
    transform: translateY(-5px);
}

.offer-image {
    height: 200px;
    overflow: hidden;
}

.offer-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.offer-card h3 {
    padding: 20px;
    margin: 0;
    color: #2d3436;
    font-size: 1.5rem;
}

.offer-card p {
    padding: 0 20px 20px;
    color: #636e72;
    line-height: 1.6;
}

/* Testimonials Section */
.testimonials-section {
    padding: 80px 0;
    background: white;
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.testimonial-card {
    background: #f8f9fa;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
}

.testimonial-content {
    font-size: 1.1rem;
    color: #2d3436;
    line-height: 1.6;
    margin-bottom: 20px;
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 15px;
}

.testimonial-author img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
}

.author-info h4 {
    margin: 0;
    color: #2d3436;
    font-size: 1.1rem;
}

.author-info p {
    margin: 5px 0 0;
    color: #636e72;
}

/* Why Choose Us Section */
.why-choose-section {
    padding: 80px 0;
    background: #f8f9fa;
}

.why-choose-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    align-items: center;
}

.why-choose-text {
    padding-right: 50px;
}

.why-choose-text .section-title {
    text-align: left;
    margin-bottom: 30px;
}

.feature-list {
    display: grid;
    gap: 30px;
}

.feature-item h3 {
    color: #2d3436;
    margin: 0 0 10px;
    font-size: 1.3rem;
}

.feature-item p {
    color: #636e72;
    line-height: 1.6;
    margin: 0;
}

.why-choose-image {
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

.why-choose-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Responsive Design */
@media (max-width: 992px) {
    .offers-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .why-choose-content {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .why-choose-text {
        padding-right: 0;
    }
}

@media (max-width: 768px) {
    .offers-grid,
    .testimonials-grid {
        grid-template-columns: 1fr;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .offer-image {
        height: 180px;
    }
}

@media (max-width: 480px) {
    .login-card {
        padding: 30px 20px;
    }
}

/* Base Styles */
body {
    background: #0f1014;
    color: white;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Auth Container */
.auth-container {
    width: 100%;
    max-width: 1200px;
    margin: 2rem;
    background: #1a1c24;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

.auth-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 600px;
}

/* Left Side - Login Form */
.auth-left {
    padding: 3rem;
    background: #1a1c24;
}

.brand {
    margin-bottom: 2rem;
}

.brand h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #2962ff;
    margin-bottom: 0.5rem;
}

.brand p {
    color: #a8b2d1;
    line-height: 1.6;
}

.auth-form h2 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
}

.auth-subtitle {
    color: #a8b2d1;
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #e4e6f0;
}

.input-group {
    position: relative;
    display: flex;
    align-items: center;
}

.input-group i {
    position: absolute;
    left: 1rem;
    color: #a8b2d1;
}

.input-group input {
    width: 100%;
    padding: 0.8rem 1rem 0.8rem 2.5rem;
    background: #2d3044;
    border: 1px solid #3d4258;
    border-radius: 8px;
    color: white;
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.input-group input:focus {
    outline: none;
    border-color: #2962ff;
    background: #333752;
}

.toggle-password {
    position: absolute;
    right: 1rem;
    background: none;
    border: none;
    color: #a8b2d1;
    cursor: pointer;
}

.form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.remember-me {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #a8b2d1;
    cursor: pointer;
}

.forgot-password {
    color: #2962ff;
    text-decoration: none;
    font-size: 0.9rem;
}

.login-btn {
    width: 100%;
    padding: 1rem;
    background: #2962ff;
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.login-btn:hover {
    background: #1e4bd8;
    transform: translateY(-2px);
}

/* Social Login */
.social-login {
    margin-top: 2rem;
    text-align: center;
}

.social-login p {
    color: #a8b2d1;
    margin-bottom: 1rem;
    position: relative;
}

.social-login p::before,
.social-login p::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 30%;
    height: 1px;
    background: #3d4258;
}

.social-login p::before {
    left: 0;
}

.social-login p::after {
    right: 0;
}

.social-buttons {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
}

.social-btn {
    flex: 1;
    padding: 0.8rem;
    border: 1px solid #3d4258;
    border-radius: 8px;
    background: transparent;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.social-btn:hover {
    background: #2d3044;
    transform: translateY(-2px);
}

.social-btn img {
    width: 20px;
    height: 20px;
}

.signup-link {
    text-align: center;
    color: #a8b2d1;
}

.signup-link a {
    color: #2962ff;
    text-decoration: none;
    font-weight: 500;
}

/* Right Side - Preview */
.auth-right {
    background: #2d1f3d;
    padding: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.feature-preview {
    width: 100%;
    max-width: 400px;
}

.preview-header {
    background: #1a1c24;
    padding: 1rem;
    border-radius: 12px 12px 0 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.preview-nav {
    display: flex;
    gap: 0.5rem;
}

.preview-nav span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #3d4258;
}

.preview-nav span:first-child {
    background: #ff5f57;
}

.preview-nav span:nth-child(2) {
    background: #febc2e;
}

.preview-nav span:last-child {
    background: #28c840;
}

.preview-header h3 {
    text-align: center;
    color: white;
}

.preview-content {
    background: #1a1c24;
    border-radius: 0 0 12px 12px;
    padding: 1rem;
}

.preview-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1.5rem;
}

.preview-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #2d3044;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.feature-item:hover {
    transform: translateX(5px);
    background: #333752;
}

.feature-item i {
    color: #2962ff;
    font-size: 1.2rem;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .auth-container {
        margin: 1rem;
    }

    .auth-content {
        grid-template-columns: 1fr;
    }

    .auth-right {
        display: none;
    }
}

@media (max-width: 480px) {
    .auth-left {
        padding: 2rem;
    }

    .social-buttons {
        flex-direction: column;
    }
}
